<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#FDFEFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:padding="10dp">
            <ImageView
                android:id="@+id/option"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/file_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/document"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/file_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/file_icon"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/option"
                android:layout_toEndOf="@+id/file_icon"
                android:maxLength="32"
                android:text="New material"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/file_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_title"
                android:layout_alignStart="@+id/file_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:text="date"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/file_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_title"
                android:layout_alignStart="@+id/file_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:visibility="invisible"
                android:text="date"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_title"
                android:layout_alignStart="@+id/file_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:visibility="invisible"
                android:text="date"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/fullNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/file_title"
                android:layout_alignStart="@+id/file_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:visibility="invisible"
                android:text="date"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/file_image"
                android:visibility="invisible"
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:src="@drawable/folder" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>